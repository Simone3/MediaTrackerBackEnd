{
  "name": "media-tracker-back-end",
  "version": "1.0.0",
  "description": "Back-End for the Media Tracker app",
  "main": "index.ts",
  "engines": {
    "node": "17.x"
  },
  "scripts": {
    "test": "nyc ts-mocha --paths --file test/global/global-init-tests.ts -p test/tsconfig.json 'test/**/*.ts'",
    "start": "node build/index.js",
    "debug": "ts-node-dev -r tsconfig-paths/register --inspect --respawn index.ts",
    "lint": "eslint 'app/**/*.ts' 'test/**/*.ts'",
    "build": "tsc && tsc-alias -p tsconfig.json && copyfiles -u 2 \"./app/config/MEDIA_TRACKER_BE_CONFIG.json\" \"./build/app/config\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simone3/MediaTrackerBackEnd.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Simone3/MediaTrackerBackEnd/issues"
  },
  "homepage": "https://github.com/Simone3/MediaTrackerBackEnd#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "mocha": {
    "timeout": 10000
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/cls-hooked": "4.3.3",
    "@types/express": "4.17.13",
    "@types/express-mung": "0.5.2",
    "@types/mocha": "9.1.1",
    "@types/node": "18.6.4",
    "@types/sinon": "10.0.13",
    "@types/uuid": "8.3.4",
    "@types/validator": "13.7.5",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "copyfiles": "2.4.1",
    "eslint": "8.21.0",
    "eslint-plugin-jsdoc": "39.3.4",
    "mocha": "10.0.0",
    "nock": "13.2.9",
    "nyc": "15.1.0",
    "sinon": "14.0.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.7.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "axios": "0.27.2",
    "class-transformer": "0.5.1",
    "class-transformer-validator": "0.9.1",
    "class-validator": "0.13.2",
    "exit-hook": "2.2.1",
    "express": "4.18.1",
    "express-http-context": "1.2.4",
    "express-mung": "0.5.1",
    "firebase-admin": "11.0.1",
    "log4js": "6.6.1",
    "mongoose": "6.5.1",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.2"
  }
}
