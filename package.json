{
  "name": "media-tracker-back-end",
  "version": "1.0.0",
  "description": "Back-End for the Media Tracker app",
  "main": "index.ts",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "test": "nyc ts-mocha --paths --file test/global/global-init-tests.ts -p test/tsconfig.json test/**/*.ts",
    "start": "node build/index.js",
    "debug": "ts-node-dev -r tsconfig-paths/register --inspect --respawn index.ts",
    "lint": "eslint app/**/*.ts test/**/*.ts",
    "build": "tsc && tsc-alias -p tsconfig.json && copyfiles -u 2 \"./app/config/MEDIA_TRACKER_BE_CONFIG.json\" \"./build/app/config\"",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simone3/MediaTrackerBackEnd.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Simone3/MediaTrackerBackEnd/issues"
  },
  "homepage": "https://github.com/Simone3/MediaTrackerBackEnd#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "mocha": {
    "timeout": 10000
  },
  "devDependencies": {
    "@types/chai": "~4.2.7",
    "@types/cls-hooked": "~4.3.0",
    "@types/exit-hook": "~2.2.1",
    "@types/express": "~4.17.2",
    "@types/express-mung": "~0.5.2",
    "@types/mocha": "~5.2.7",
    "@types/mongodb": "~3.3.14",
    "@types/mongoose": "~5.5.36",
    "@types/nock": "~11.1.0",
    "@types/request": "~2.48.4",
    "@types/request-promise-native": "~1.0.17",
    "@types/sinon": "~7.5.1",
    "@types/uuid": "~3.4.6",
    "@typescript-eslint/eslint-plugin": "~2.13.0",
    "@typescript-eslint/parser": "~2.13.0",
    "chai": "~4.2.0",
    "chai-http": "~4.3.0",
    "copyfiles": "^2.1.1",
    "eslint": "~6.8.0",
    "eslint-plugin-jsdoc": "~18.6.2",
    "mocha": "~6.2.2",
    "nock": "~11.7.0",
    "nyc": "~15.0.0",
    "sinon": "~8.0.1",
    "ts-mocha": "~6.0.0",
    "ts-node": "~8.5.4",
    "ts-node-dev": "~1.0.0-pre.44",
    "tsc-alias": "^1.1.1",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~3.7.4"
  },
  "dependencies": {
    "class-transformer": "~0.2.3",
    "class-transformer-validator": "~0.8.0",
    "class-validator": "~0.11.0",
    "exit-hook": "~2.2.0",
    "express": "~4.17.1",
    "express-http-context": "~1.2.3",
    "express-mung": "~0.5.1",
    "firebase-admin": "~8.9.0",
    "log4js": "~6.1.0",
    "mongoose": "~5.8.3",
    "reflect-metadata": "~0.1.13",
    "request": "~2.88.0",
    "request-promise-native": "~1.0.8",
    "uuid": "~3.3.3"
  }
}
