{
  "name": "media-tracker-back-end",
  "version": "1.0.0",
  "description": "Back-End for the Media Tracker app",
  "main": "index.ts",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "test": "nyc ts-mocha --paths --file test/global/global-init-tests.ts -p test/tsconfig.json test/**/*.ts",
    "start": "node build/index.js",
    "debug": "ts-node-dev -r tsconfig-paths/register --inspect --respawn index.ts",
    "lint": "eslint app/**/*.ts test/**/*.ts",
    "build": "tsc && tsc-alias -p tsconfig.json && copyfiles -u 2 \"./app/config/MEDIA_TRACKER_BE_CONFIG.json\" \"./build/app/config\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simone3/MediaTrackerBackEnd.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Simone3/MediaTrackerBackEnd/issues"
  },
  "homepage": "https://github.com/Simone3/MediaTrackerBackEnd#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "mocha": {
    "timeout": 10000
  },
  "devDependencies": {
    "@types/chai": "~4.2.11",
    "@types/cls-hooked": "~4.3.0",
    "@types/exit-hook": "~2.2.1",
    "@types/express": "~4.17.6",
    "@types/express-mung": "~0.5.2",
    "@types/mocha": "~7.0.2",
    "@types/mongodb": "~3.5.20",
    "@types/mongoose": "~5.7.21",
    "@types/nock": "~11.1.0",
    "@types/sinon": "~9.0.4",
    "@types/uuid": "~8.0.0",
    "@typescript-eslint/eslint-plugin": "~3.1.0",
    "@typescript-eslint/parser": "~3.1.0",
    "chai": "~4.2.0",
    "chai-http": "~4.3.0",
    "copyfiles": "~2.3.0",
    "eslint": "~7.1.0",
    "eslint-plugin-jsdoc": "~27.0.3",
    "mocha": "~7.2.0",
    "nock": "~12.0.3",
    "nyc": "~15.1.0",
    "sinon": "~9.0.2",
    "ts-mocha": "~7.0.0",
    "ts-node": "~8.10.2",
    "ts-node-dev": "~1.0.0-pre.44",
    "tsc-alias": "~1.1.1",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~3.9.5"
  },
  "dependencies": {
    "axios": "~0.19.2",
    "class-transformer": "~0.3.1",
    "class-transformer-validator": "~0.8.0",
    "class-validator": "~0.12.2",
    "exit-hook": "~2.2.0",
    "express": "~4.17.1",
    "express-http-context": "~1.2.3",
    "express-mung": "~0.5.1",
    "firebase-admin": "~8.12.1",
    "log4js": "~6.3.0",
    "mongoose": "~5.9.17",
    "reflect-metadata": "~0.1.13",
    "uuid": "~8.1.0"
  }
}
